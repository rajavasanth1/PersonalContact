@model IEnumerable<PersonalContact.Models.Contact>

@{
    ViewData["Title"] = "Index";
}

<h1>Contact Details</h1>

<p>
    <a asp-action="Create"><button class="btn btn-primary">Create New</button></a>
</p>
<table class="table table-success w-auto">
    <thead >
        <tr style="white-space:nowrap">
            <th class="p-3 mb-2 bg-secondary text-white">
                Name
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.HomePhone)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.Address2)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
          
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white">
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th class="p-3 mb-2 bg-secondary text-white"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="white-space:nowrap">
                <td>
                    @Html.DisplayFor(modelItem => item.Person.FirstName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
