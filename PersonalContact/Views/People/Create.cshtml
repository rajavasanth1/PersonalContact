@model PersonalContact.Models.Person

@{
    ViewData["Title"] = "Create";
}

<h1>Create Person</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-2">
                <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="DOB" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Gender" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                @* <input asp-for="Gender" class="form-control" /> *@
                    <select asp-for="Gender" class="form-select" asp-items="ViewBag.Gender"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <input type="submit" value="Create" class="btn btn-primary  mb-2 mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
